USEPDFLATEX = true
PDFLATEX = latexmk
PDFLATEXFLAGS = -lualatex
TEXINPUTS += ..

LaTeXDocument($(TARGET), $(TARGET))
TeXGeneratedFiles($(addsuffix .tex,$(INCLUDES)))

PANDOCARGS = -f markdown+ignore_line_breaks -t latex -N --chapter --latex-engine=lualatex

.PHONY: clean

$(TARGET).tex: ../$(TARGET).md
	cd ..; pandoc $(PANDOCARGS) --standalone -o intermediate/$@ $(TARGET).md

%.tex: ../%.md
	cd ..; pandoc $(PANDOCARGS) -o intermediate/$@ $*.md

clean:
	git clean -dfX
